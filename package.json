{
  "name": "andromia-server",
  "version": "1.0.0",
  "description": "A Node.js server built with Ts.ED for Andromia.",
  "repository": "https://github.com/alex-dev/andromia-server",
  "main": "build/app.js",
  "scripts": {
    "build": "npm run transpile:prod",
    "test:e2e": "npm run transpile:test && mocha --reporter spec --check-leaks --bail tests/",
    "tslint": "tslint ./src/*.ts",
    "transpile:test": "tsc --project tsconfig.test.json",
    "transpile:prod": "tsc --project tsconfig.prod.json",
    "start:dev": "nodemon --watch './src/**/*.ts' --ignore './node_modules/**/*' --exec ts-node ./src/app.ts",
    "start": "node ./build/app.js"
  },
  "author": "Alexandre Parent <alexandreparent_dev@outlook.com>",
  "contributors": [
    "Guillaume Le Blanc"
  ],
  "dependencies": {
    "@tsed/common": "^4.32.0",
    "@tsed/core": "^4.32.0",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "express": "^4.16.4",
    "method-override": "^3.0.0",
    "moment": "^2.22.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/compression": "^0.0.36",
    "@types/express": "^4.16.0",
    "@types/method-override": "^0.0.31",
    "@types/mocha": "^5.2.5",
    "@types/moment": "^2.13.0",
    "@types/supertest": "^2.0.6",
    "@tsed/testing": "^4.32.0",
    "chai": "^4.2.0",
    "dot-env": "^0.0.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.6",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  }
}
